  <div class="container">

  <!--Carousel
  ==================================================-->





<!-- Feature
  ==============================================-->


  <div class="row feature-box">
      <div class="span12 cnt-title">
       <h1> A Self-Destructing ToDo List to Keep You Focused</h1>
      </div>

      <div class="span4">
        <%= image_tag('Checklist.svg') %>
        <h2> Unlimited Items </h2>
        <p>
            Your ToDo is as big as your imagination.
        </p>

      </div>

      <div class="span4">
        <%= image_tag('Nuclear-Mushroom.svg') %>
        <h2> Seven Days </h2>
        <p>
            Each item will only last seven days before deleting itself.
        </p>
      </div>

      <div class="span4">
        <%= image_tag('Chat-2.svg') %>
        <h2> Peer Support </h2>
        <p>
            Blocitoff Users can view each others ToDos, creating collaboration, competition and accountability.
        </p>
      </div>
  </div>


<!-- /.Feature -->

